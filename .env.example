# MemeScan — 环境变量配置
# 复制为 .env 并填入你的参数值。
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ── 链 & RPC ────────────────────────────────────────────────────
# Alchemy / Infura / QuickNode 主网端点
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
CHAIN_ID=1

# 可选的 WebSocket（用于未来升级为订阅模式监控）
WSS_URL=

# ── Uniswap V2 ─────────────────────────────────────────────────
UNISWAP_V2_FACTORY=0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f
WETH_ADDRESS=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2

# ── Anvil / Foundry ────────────────────────────────────────────
ANVIL_PORT=8545
ANVIL_BLOCK_TIME=0
SIMULATION_TIMEOUT_SECS=30

# ── 数据库 ──────────────────────────────────────────────────────
DATABASE_URL=sqlite+aiosqlite:///./memescan.db

# ── 监控参数 ────────────────────────────────────────────────────
POLL_INTERVAL_SECS=2.0
MAX_RECONNECT_ATTEMPTS=10
RECONNECT_BASE_DELAY_SECS=1.0

# ── LLM / 分析 ─────────────────────────────────────────────────
OPENAI_API_KEY=
LLM_MODEL=gpt-4o-mini

# ── 风险阈值 ────────────────────────────────────────────────────
HIGH_TAX_THRESHOLD_PCT=10.0
